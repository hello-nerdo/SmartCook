    "clsx": "^2.1.1",
    "date-fns": "^3.6.0",
    "framer-motion": "^12.6.2",
    "gray-matter": "^4.0.3",
    "image-js": "^0.36.0",
    "next": "^15.2.3",
    "openai": "^4.97.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-icons": "^5.5.0",
    "remark": "^15.0.1",
    "remark-html": "^16.0.1",
    "svix": "^1.63.0",
    "tailwind-merge": "^3.2.0"
  },
  "devDependencies": {
    "@opennextjs/cloudflare": "^0.6.5",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^20.14.8",
