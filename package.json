{
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "types": "tsc --noEmit",
    "deploy": "npm run types && opennextjs-cloudflare build && opennextjs-cloudflare deploy",
    "deploy:now": "npm run types && opennextjs-cloudflare deploy",
    "preview": "npm run types && opennextjs-cloudflare build && opennextjs-cloudflare preview",
    "preview:now": "opennextjs-cloudflare preview",
    "cf-typegen": "wrangler types --env-interface CloudflareEnv cloudflare-env.d.ts",
    "reset-db": "wrangler d1 execute smart_cook_db --local --file=src/db/setup/drop-and-create-tables.sql",
    "reset-db:prod": "wrangler d1 execute smart_cook_db --remote --file=src/db/setup/drop-and-create-tables.sql",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx --fix",
    "lint:check": "eslint src --ext .js,.jsx,.ts,.tsx",
    "pretty": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "pretty:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "test": "npm run types && npm run lint:check",
    "test:format": "npm run types && npm run lint:check && npm run pretty:check",
    "test:fix": "npm run types && npm run lint && npm run pretty",
    "validate": "npm run test && npm run build"
  },
  "dependencies": {
